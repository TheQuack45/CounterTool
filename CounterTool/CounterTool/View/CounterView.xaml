<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CounterTool.View.CounterView">
    <StackLayout Padding="5">
        <Entry HorizontalOptions="Center" Text="Sample Counter"/>
        <Label Text="10"/>
        <StackLayout Orientation="Horizontal">
            <Button Text="-" FontAttributes="Bold"/>
            <Entry HorizontalOptions="CenterAndExpand" Text="1"/>
            <Button Text="+" FontAttributes="Bold"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Entry Placeholder="Min" Text="0"/>
            <Entry Placeholder="Max" Text="10"/>
        </StackLayout>
    </StackLayout>
</ContentPage>