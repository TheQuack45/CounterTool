    <Grid.RowDefinitions>
        <RowDefinition/>
        <RowDefinition/>
        <RowDefinition/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
        <ColumnDefinition/>
    </Grid.ColumnDefinitions>
    <Grid.Children>
        <Entry Grid.Row="0" Grid.Column="0" HorizontalOptions="Center"
               Text="{Binding Title, Mode=TwoWay}"/>
        <Label Text="{Binding Value}"/>
        <StackLayout Grid.Row="1" Grid.Column="0" Orientation="Horizontal">
            <Button Text="-" FontAttributes="Bold"/>
            <Entry HorizontalOptions="CenterAndExpand" Text="{Binding Step, Mode=TwoWay, StringFormat='{+0;-0}'}"/>
            <Button Text="+" FontAttributes="Bold"/>
        </StackLayout>
        <StackLayout Grid.Row="2" Grid.Column="0" Orientation="Horizontal">
            <Entry Placeholder="Min" Text="{Binding Minimum, Mode=TwoWay}"/>
            <Entry Placeholder="Max" Text="{Binding Maximum, Mode=TwoWay}"/>
        </StackLayout>
    </Grid.Children>
</Grid>